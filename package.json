{
  "name": "codearena",
  "version": "0.1.0",
  "private": true,
  "description": "CodeArena - Competitive coding platform",
  "scripts": {
    "dev": "pnpm -r --parallel run dev",
    "dev:api": "pnpm --filter @codearena/api dev",
    "dev:web": "pnpm --filter @codearena/web dev",
    "dev:extension": "pnpm --filter codearena dev",
    "build": "pnpm --filter @codearena/shared build && pnpm -r run build",
    "build:api": "pnpm --filter @codearena/api build",
    "build:web": "pnpm --filter @codearena/web build",
    "build:extension": "pnpm --filter codearena build",
    "lint": "pnpm -r run lint",
    "test": "pnpm -r run test",
    "typecheck": "pnpm -r run typecheck",
    "db:generate": "pnpm --filter @codearena/api db:generate",
    "db:migrate": "pnpm --filter @codearena/api db:migrate",
    "db:seed": "pnpm --filter @codearena/api db:seed",
    "db:studio": "pnpm --filter @codearena/api db:studio",
    "clean": "pnpm -r run clean",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "eslint": "^8.55.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.0",
    "typescript": "^5.3.0"
  },
  "packageManager": "pnpm@8.12.0",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  }
}
