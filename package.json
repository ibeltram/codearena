{
  "name": "reporivals",
  "version": "0.1.0",
  "private": true,
  "description": "RepoRivals - Competitive coding platform",
  "scripts": {
    "dev": "turbo dev",
    "dev:api": "turbo dev --filter=@reporivals/api",
    "dev:web": "turbo dev --filter=@reporivals/web",
    "dev:extension": "turbo dev --filter=reporivals",
    "build": "turbo build",
    "build:api": "turbo build --filter=@reporivals/api",
    "build:web": "turbo build --filter=@reporivals/web",
    "build:extension": "turbo build --filter=reporivals",
    "lint": "turbo lint",
    "test": "turbo test",
    "typecheck": "turbo typecheck",
    "db:generate": "pnpm --filter @reporivals/api db:generate",
    "db:migrate": "pnpm --filter @reporivals/api db:migrate",
    "db:seed": "pnpm --filter @reporivals/api db:seed",
    "db:studio": "pnpm --filter @reporivals/api db:studio",
    "clean": "turbo clean",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test:load": "k6 run load-tests/scripts/api-general.js",
    "test:load:health": "k6 run load-tests/scripts/health.js",
    "test:load:matches": "k6 run load-tests/scripts/matches.js",
    "test:load:submissions": "k6 run load-tests/scripts/submissions.js",
    "test:load:smoke": "k6 run --vus 5 --duration 30s load-tests/scripts/health.js",
    "test:load:all": "npm run test:load:health && npm run test:load:matches && npm run test:load:submissions && npm run test:load"
  },
  "devDependencies": {
    "@types/node": "^25.0.3",
    "eslint": "^9.39.2",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.0",
    "turbo": "^2.7.2",
    "typescript": "^5.3.0"
  },
  "packageManager": "pnpm@8.12.0",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "next-themes": "^0.4.6"
  }
}
