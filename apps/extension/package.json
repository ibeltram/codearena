{
  "name": "reporivals",
  "displayName": "RepoRivals",
  "description": "Competitive coding platform - join matches and submit directly from VS Code",
  "version": "0.1.0",
  "publisher": "reporivals",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "reporivals.signIn",
        "title": "RepoRivals: Sign In",
        "icon": "$(sign-in)"
      },
      {
        "command": "reporivals.signOut",
        "title": "RepoRivals: Sign Out",
        "icon": "$(sign-out)"
      },
      {
        "command": "reporivals.showAuthStatus",
        "title": "RepoRivals: Account"
      },
      {
        "command": "reporivals.browseChallenges",
        "title": "RepoRivals: Browse Challenges"
      },
      {
        "command": "reporivals.refreshChallenges",
        "title": "RepoRivals: Refresh Challenges",
        "icon": "$(refresh)"
      },
      {
        "command": "reporivals.joinMatch",
        "title": "RepoRivals: Join Match"
      },
      {
        "command": "reporivals.submit",
        "title": "RepoRivals: Submit"
      },
      {
        "command": "reporivals.lockSubmission",
        "title": "RepoRivals: Lock Submission"
      },
      {
        "command": "reporivals.openMatchInWeb",
        "title": "RepoRivals: Open Match in Web"
      },
      {
        "command": "reporivals.filterChallenges",
        "title": "RepoRivals: Filter by Category",
        "icon": "$(filter)"
      },
      {
        "command": "reporivals.openChallengeInWeb",
        "title": "Open in Web"
      },
      {
        "command": "reporivals.toggleGrouping",
        "title": "Toggle Grouping",
        "icon": "$(list-tree)"
      },
      {
        "command": "reporivals.showActiveMatchPanel",
        "title": "RepoRivals: Show Active Match"
      },
      {
        "command": "reporivals.setReady",
        "title": "RepoRivals: Ready for Match"
      },
      {
        "command": "reporivals.forfeit",
        "title": "RepoRivals: Forfeit Match"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "reporivals",
          "title": "RepoRivals",
          "icon": "resources/icon.svg"
        }
      ]
    },
    "views": {
      "reporivals": [
        {
          "id": "reporivals-challenges",
          "name": "Challenges",
          "contextualTitle": "RepoRivals Challenges"
        },
        {
          "id": "reporivals-match",
          "name": "Active Match",
          "contextualTitle": "Current Match"
        },
        {
          "id": "reporivals-history",
          "name": "Recent Matches",
          "contextualTitle": "Match History"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "reporivals-challenges",
        "contents": "Welcome to RepoRivals!\n\nSign in to browse challenges and compete.\n\n[Sign In](command:reporivals.signIn)"
      },
      {
        "view": "reporivals-match",
        "contents": "No active match.\n\nJoin a challenge to start competing!\n\n[Browse Challenges](command:reporivals.browseChallenges)"
      },
      {
        "view": "reporivals-history",
        "contents": "No recent matches.\n\nComplete your first match to see history here."
      }
    ],
    "configuration": {
      "title": "RepoRivals",
      "properties": {
        "reporivals.apiUrl": {
          "type": "string",
          "default": "https://api.reporivals.dev",
          "description": "RepoRivals API server URL"
        },
        "reporivals.webUrl": {
          "type": "string",
          "default": "https://reporivals.dev",
          "description": "RepoRivals web application URL"
        },
        "reporivals.autoSubmit": {
          "type": "boolean",
          "default": false,
          "description": "Automatically submit when match time expires (if not already submitted)"
        },
        "reporivals.showTimerInStatusBar": {
          "type": "boolean",
          "default": true,
          "description": "Show match timer in the status bar during active matches"
        },
        "reporivals.timerWarningMinutes": {
          "type": "number",
          "default": 5,
          "description": "Show warning notification when this many minutes remain"
        },
        "reporivals.excludePatterns": {
          "type": "array",
          "default": [
            "node_modules/**",
            ".git/**",
            "dist/**",
            "build/**",
            ".env*",
            "*.log"
          ],
          "description": "File patterns to exclude from submissions"
        },
        "reporivals.maxSubmissionSizeMB": {
          "type": "number",
          "default": 50,
          "description": "Maximum submission size in MB"
        }
      }
    },
    "menus": {
      "view/title": [
        {
          "command": "reporivals.filterChallenges",
          "when": "view == reporivals-challenges",
          "group": "navigation@1"
        },
        {
          "command": "reporivals.refreshChallenges",
          "when": "view == reporivals-challenges",
          "group": "navigation@2"
        },
        {
          "command": "reporivals.toggleGrouping",
          "when": "view == reporivals-challenges",
          "group": "navigation@3"
        },
        {
          "command": "reporivals.signIn",
          "when": "view == reporivals-challenges && !reporivals.isAuthenticated",
          "group": "navigation@4"
        }
      ],
      "view/item/context": [
        {
          "command": "reporivals.joinMatch",
          "when": "view == reporivals-challenges && viewItem == challenge",
          "group": "inline"
        },
        {
          "command": "reporivals.openChallengeInWeb",
          "when": "view == reporivals-challenges && viewItem == challenge",
          "group": "1_actions"
        },
        {
          "command": "reporivals.joinMatch",
          "when": "view == reporivals-challenges && viewItem == challenge",
          "group": "1_actions"
        }
      ],
      "commandPalette": [
        {
          "command": "reporivals.submit",
          "when": "reporivals.hasActiveMatch && !reporivals.isSubmissionLocked"
        },
        {
          "command": "reporivals.lockSubmission",
          "when": "reporivals.hasActiveMatch && reporivals.hasSubmitted && !reporivals.isSubmissionLocked"
        },
        {
          "command": "reporivals.openMatchInWeb",
          "when": "reporivals.hasActiveMatch"
        },
        {
          "command": "reporivals.openChallengeInWeb",
          "when": "false"
        },
        {
          "command": "reporivals.showActiveMatchPanel",
          "when": "reporivals.hasActiveMatch"
        },
        {
          "command": "reporivals.setReady",
          "when": "reporivals.hasActiveMatch"
        },
        {
          "command": "reporivals.forfeit",
          "when": "reporivals.hasActiveMatch"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run build:prod",
    "build": "esbuild ./src/extension.ts --bundle --outfile=dist/extension.js --external:vscode --format=cjs --platform=node --sourcemap",
    "build:prod": "esbuild ./src/extension.ts --bundle --outfile=dist/extension.js --external:vscode --format=cjs --platform=node --minify",
    "dev": "pnpm run build --watch",
    "lint": "eslint src --ext ts",
    "typecheck": "tsc --noEmit",
    "test": "node --test ./src/test/**/*.test.ts",
    "test:vscode": "vscode-test",
    "package": "vsce package --no-dependencies"
  },
  "devDependencies": {
    "@reporivals/eslint-config": "workspace:*",
    "@reporivals/tsconfig": "workspace:*",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.10.0",
    "@types/vscode": "^1.85.0",
    "@vscode/test-electron": "^2.3.8",
    "@vscode/vsce": "^2.22.0",
    "esbuild": "^0.19.9",
    "eslint": "^8.55.0",
    "glob": "^10.3.10",
    "mocha": "^10.2.0",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "@reporivals/shared": "workspace:*"
  }
}
