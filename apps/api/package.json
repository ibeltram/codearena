{
  "name": "@reporivals/api",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsup src/index.ts --format esm --dts",
    "start": "node dist/index.js",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "clean": "rm -rf dist",
    "db:generate": "drizzle-kit generate:pg",
    "db:push": "drizzle-kit push:pg",
    "db:sync": "tsx src/db/sync-schema.ts",
    "db:migrate": "tsx src/db/migrate.ts",
    "db:seed": "tsx src/db/seed.ts",
    "db:seed-rewards": "tsx src/db/seed-rewards.ts",
    "db:studio": "drizzle-kit studio"
  },
  "dependencies": {
    "@reporivals/shared": "workspace:*",
    "@fastify/cors": "^8.5.0",
    "@fastify/helmet": "^11.1.1",
    "@fastify/jwt": "^7.2.4",
    "@fastify/rate-limit": "^9.0.1",
    "@fastify/sensible": "^5.5.0",
    "@fastify/websocket": "^8.3.1",
    "bullmq": "^5.1.0",
    "dotenv": "^16.3.1",
    "drizzle-orm": "^0.29.1",
    "fastify": "^4.25.1",
    "ioredis": "^5.3.2",
    "pg": "^8.11.3",
    "pino": "^8.17.1",
    "pino-pretty": "^10.3.0",
    "ws": "^8.14.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/ws": "^8.5.10",
    "@reporivals/eslint-config": "workspace:*",
    "@reporivals/tsconfig": "workspace:*",
    "@types/node": "^20.10.0",
    "@types/pg": "^8.10.9",
    "drizzle-kit": "^0.20.6",
    "eslint": "^8.55.0",
    "tsup": "^8.0.1",
    "tsx": "^4.6.2",
    "typescript": "^5.3.0"
  }
}
