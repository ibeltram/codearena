{
  "name": "@reporivals/api",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsup src/index.ts --format esm",
    "start": "node dist/index.js",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "test": "echo 'No tests configured'",
    "clean": "rm -rf dist",
    "db:generate": "drizzle-kit generate:pg",
    "db:push": "drizzle-kit push:pg",
    "db:sync": "tsx src/db/sync-schema.ts",
    "db:migrate": "tsx src/db/migrate.ts",
    "db:seed": "tsx src/db/seed.ts",
    "db:seed-rewards": "tsx src/db/seed-rewards.ts",
    "db:studio": "drizzle-kit studio"
  },
  "dependencies": {
    "@reporivals/shared": "workspace:*",
    "@fastify/cookie": "^11.0.2",
    "@fastify/cors": "^11.2.0",
    "minimatch": "^10.1.1",
    "@fastify/helmet": "^13.0.2",
    "@fastify/jwt": "^10.0.0",
    "@fastify/rate-limit": "^10.3.0",
    "@fastify/sensible": "^6.0.4",
    "@fastify/websocket": "^11.2.0",
    "bullmq": "^5.1.0",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.45.1",
    "fastify": "^5.6.2",
    "ioredis": "^5.3.2",
    "pg": "^8.11.3",
    "pino": "^10.1.0",
    "pino-pretty": "^13.1.3",
    "ws": "^8.14.2",
    "zod": "^4.3.4",
    "prom-client": "^15.1.0",
    "@opentelemetry/api": "^1.7.0",
    "@opentelemetry/sdk-node": "^0.208.0",
    "@opentelemetry/sdk-trace-node": "^2.2.0",
    "@opentelemetry/resources": "^2.2.0",
    "@opentelemetry/semantic-conventions": "^1.18.0",
    "@opentelemetry/exporter-trace-otlp-http": "^0.208.0",
    "@opentelemetry/instrumentation-fastify": "^0.53.1",
    "@opentelemetry/instrumentation-http": "^0.208.0",
    "@opentelemetry/instrumentation-pg": "^0.61.2",
    "@opentelemetry/instrumentation-ioredis": "^0.57.0"
  },
  "devDependencies": {
    "@types/minimatch": "^5.1.2",
    "@types/ws": "^8.5.10",
    "@reporivals/eslint-config": "workspace:*",
    "@reporivals/tsconfig": "workspace:*",
    "@types/node": "^20.10.0",
    "@types/pg": "^8.10.9",
    "drizzle-kit": "^0.31.8",
    "eslint": "^8.55.0",
    "tsup": "^8.0.1",
    "tsx": "^4.6.2",
    "typescript": "^5.3.0"
  }
}
